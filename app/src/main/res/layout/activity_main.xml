<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#e8f4f8"
    android:gravity="center"
    android:orientation="vertical">
   <!-- Crearemos un TextView para mostrar el titulo. -->
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:text="App Conoces al Artista"
       android:textColor="@android:color/holo_blue_light"
       android:textSize="50sp" />
   <!-- Create un boton de imagen para iniciar la app. -->
   <ImageButton
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       android:background="@drawable/play"
       android:onClick="startGame" />
   <!-- Crearemos el boton alternativo de  "Play" -->
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Play"
       android:textSize="40sp"
       android:textColor="@android:color/holo_green_dark"
       android:onClick="startGame" />
   <!-- Para iniciar el juego haremos uso del evento clicked
   startGame() en el MainActivity lo invocaremos. -->
</LinearLayout>